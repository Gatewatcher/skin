{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-idiomatic-order"
  ],
  "rules": {
    "no-descending-specificity": null,
    "scss/at-extend-no-missing-placeholder": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "at-root",
          "each",
          "else",
          "error",
          "extend",
          "for",
          "function",
          "if",
          "include",
          "mixin",
          "return",
          "use",
          "global"
        ]
      }
    ]
  }
}
